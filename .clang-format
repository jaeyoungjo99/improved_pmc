# Defines AD Common Style Guidelines (additional rules like naming conventions
# are described in the documentation)
#
# Version: 29/10/2021
# Author: Emmanuel Doucet <emmanuel.doucet@valeo.com>
#
# requires clang-format version 7.0

Language: Cpp
BasedOnStyle: Google
Standard: Cpp11

AccessModifierOffset: -4
BreakBeforeBraces: Custom
BraceWrapping:
  BeforeElse: true
ColumnLimit: 120
ContinuationIndentWidth: 8
IncludeBlocks: Preserve
IndentCaseLabels: false
IndentWidth: 4
MacroBlockBegin: "^MAPS_BEGIN_.*_DEFINITION$"
MacroBlockEnd: "^MAPS_END_.*_DEFINITION$"
MaxEmptyLinesToKeep: 1
SpacesBeforeTrailingComments: 1
UseTab: Never
AlignTrailingComments: true